@model IEnumerable<ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary text-right"><i class="fas fa-plus mr-2"></i>Create New Type</a>
        </div>
    </div>
</div>

<br/><br/>

@if(Model.Count() > 0){
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(ApplicationType appType in Model)
            {
                <tr>
                    <td>@appType.Name</td>
                    <td>
                        <div class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-action="Edit" asp-route-id="@appType.Id" class="btn btn-primary mr-2">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="ApplicationType" asp-action="Delete" asp-route-id="@appType.Id" class="btn btn-danger">
                                    <i class="far fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else{
    <p>No Application Type exists.</p>
}